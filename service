    <script>
      function showForm(formType) {
        if (formType === "biasa") {
          document.getElementById("form-biasa").style.display = "block";
          document.getElementById("form-khusus").style.display = "none";
        } else if (formType === "khusus") {
          document.getElementById("form-biasa").style.display = "none";
          document.getElementById("form-khusus").style.display = "block";
        }
      }
    </script>
